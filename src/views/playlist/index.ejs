<%- include("../layout/header", { title: "Playlist SoulSound"}); -%>
<div class="container mt-5 row mx-auto">
    <form id="formPlaylist" class="col-md-6 col-12 row" action="/playlist/upload" method="POST" enctype="multipart/form-data">
        <div class="col-md-6 col-12">
            <div class="mb-3">
                <label class="fw-bold my-1" for="title" class="form-label">Playlist title</label>
                <input type="text" class="form-control" id="title" name="title">
            </div>
            <!-- <div class="mb-3">
                <label class="fw-bold my-1" for="file" class="form-label">Playlist thumbnail</label>
                <input type="file" class="form-control" id="file" name="file">
            </div> -->
            <div class="mb-3">
                <label class="fw-bold my-1" for="image" class="form-label">Playlist thumbnail</label>
                <input type="text" class="form-control" id="image" name="image">
                <p class="">Please save file to /src/uploads then put correct name to field (include .jpg, .png)</p>
            </div>
            <div class="mb-3">
                <label class="fw-bold my-1" for="description" class="form-label">Playlist description</label>
                <input type="text" class="form-control" id="description" name="description" value="Playlist ~ By SoulSound">
            </div>
            <div class="mb-3">
                <label class="fw-bold my-1" for="songIds" class="form-label">Playlist songIds</label>
                <textarea class="form-control" id="songIds" name="songIds" style="height: 200px;"></textarea>
            </div>
            <div id="result"></div>        
            <button type="submit" id="uploadPlaylist" class="btn btn-outline-success">Upload</button>
        </div>
        <div class="col-md-6 col-12">
            <div class="mb-3">
                <label class="fw-bold my-1" for="title" class="form-label">List Category</label>
                <select class="form-select" name="categoryId" id="categorySelect">
                    <option selected></option>
                    <% categories.forEach(function(category) { %>
                        <option value="<%= category['id'] %>"><%= category['title'] %></option>
                    <% }); %>
                </select>
            </div>
            <div class="mb-3">
                <label class="fw-bold my-1" for="title" class="form-label">Playlist Exists</label>
                <ul class="list-group" id="playlistExists">
                    
                </ul>
            </div>
        </div>
    </form>
    
    <div class="col-md-6 col-12">
        <label class="fw-bold my-1" for="title" class="form-label">List Song</label>
        <div class="table-responsive" style="max-height: 500px;">
            <table id="songTable" class="table table-striped table-fixed">
                <thead>
                    <tr>
                        <th scope="col"><input type="checkbox" name="" id="idAll"></th>
                        <th scope="col">Song ID</th>
                        <th scope="col">Song Title</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include("../layout/footer"); -%>
